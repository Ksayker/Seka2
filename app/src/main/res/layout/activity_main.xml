<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ksayker.seka2.MainActivity"
    android:background="@drawable/backgroundtexture">

    <LinearLayout
        android:id="@+id/l_topLayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="2dp"
            android:id="@+id/iv_compLeftCard"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.33"
            android:src="@drawable/shirt"/>
        <ImageView
            android:layout_margin="2dp"
            android:id="@+id/iv_compCenterCard"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:src="@drawable/shirt"
            android:layout_weight="0.33"/>
        <ImageView
            android:layout_margin="2dp"
            android:id="@+id/iv_compRightCard"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:src="@drawable/shirt"
            android:layout_weight="0.33"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_compCash"
            android:layout_width="0dp"
            android:text="cash: 100"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:textSize="@dimen/textSize"
            android:layout_height="fill_parent"
            android:textColor="@color/colorBlack"
            android:layout_weight="0.25"/>
        <TextView
            android:id="@+id/tv_compMessage"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="@dimen/textSize"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"/>
        <Button
            android:background="@color/colorBtn"
            android:text="new game"
            android:id="@+id/bt_new_game"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:layout_marginTop="2dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/l_centerLayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.5">
        <TextView
            android:text="Bank:"
            android:id="@+id/tv_centerTable"
            android:textSize="@dimen/TextSizeForCenterTextView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.50"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20">
        <TextView
            android:id="@+id/tv_userCash"
            android:layout_width="0dp"
            android:textColor="@color/colorBlack"
            android:layout_height="fill_parent"
            android:text="cash: 100"
            android:textSize="@dimen/textSize"
            android:gravity="center"
            android:layout_weight="0.25"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.75">

        </LinearLayout>
    </LinearLayout>
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="2dp"
            android:id="@+id/iv_userLeftCard"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:src="@drawable/shirt"
            android:layout_weight="0.33"/>
        <ImageView
            android:layout_margin="2dp"
            android:id="@+id/iv_userCenterCard"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:src="@drawable/shirt"
            android:layout_weight="0.33"/>
        <ImageView
            android:layout_margin="2dp"
            android:id="@+id/iv_userRightCard"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:src="@drawable/shirt"
            android:layout_weight="0.33"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_weight="0.20"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <Button
            android:layout_margin="2dp"
            android:background="@color/colorBtn"
            android:text="bet"
            android:id="@+id/bt_bet"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"/>
        <Button
            android:layout_margin="2dp"
            android:background="@color/colorBtn"
            android:text="show"
            android:id="@+id/bt_show"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"/>
        <Button
            android:layout_margin="2dp"
            android:background="@color/colorBtn"
            android:id="@+id/bt_pass"
            android:text="pass"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"/>
        <Button
            android:layout_margin="2dp"
            android:background="@color/colorBtn"
            android:text="deal"
            android:id="@+id/bt_deal"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"/>

    </LinearLayout>
</LinearLayout>
